{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lumina-note.dev/schemas/plugin-manifest.v1.json",
  "title": "Lumina Plugin Manifest v1",
  "type": "object",
  "required": ["id", "name", "version", "entry"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9][a-z0-9._-]*$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(?:[-+][A-Za-z0-9.-]+)?$"
    },
    "description": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "entry": {
      "type": "string",
      "minLength": 1
    },
    "min_app_version": {
      "type": "string"
    },
    "api_version": {
      "type": "string",
      "default": "1"
    },
    "permissions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "default": []
    },
    "enabled_by_default": {
      "type": "boolean",
      "default": true
    },
    "is_desktop_only": {
      "type": "boolean",
      "default": false
    }
  },
  "additionalProperties": true
}
